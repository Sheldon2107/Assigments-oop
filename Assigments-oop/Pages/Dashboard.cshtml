@page
@model ASSIGMENTS.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1>@ViewData["Title"]</h1>

<h2>Project Overview</h2>
<p>Total Projects: @Model.TotalProjects</p>
<p>Completed Tasks: @Model.CompletedTasks</p>
<p>Pending Tasks: @Model.PendingTasks</p>

<h3>Projects</h3>
<ul>
    @foreach (var project in Model.Projects)
    {
        <li>
            <strong>@project.Name</strong> (Deadline: @project.Deadline.ToShortDateString())<br />
            <p>@project.Summary</p>
            <ul>
                @foreach (var task in project.Tasks)
                {
                    <li>@task.Description - Status: @task.Status</li>
                }
            </ul>
        </li>
    }
</ul>
