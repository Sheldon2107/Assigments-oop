<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASSIGMENTS</title>

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <style>
        /* Sidebar styling */
        .sidebar {
            width: 250px;
            position: fixed;
            height: 100%;
            background-color: purple;
            padding-top: 20px;
            transition: transform 0.5s; /* Smooth transition effect */
            overflow: hidden; /* Hide overflow */
            transform: translateX(0); /* Sidebar is visible initially */
        }

            .sidebar.hidden {
                transform: translateX(-100%); /* Hide the sidebar completely */
            }

        .content {
            margin-left: 260px; /* Space for the expanded sidebar */
            padding: 20px;
            transition: margin-left 0.3s; /* Smooth transition effect */
        }

        .sidebar.hidden + .content {
            margin-left: 20px; /* Adjusted margin when the sidebar is hidden */
        }

        .sidebar a {
            text-decoration: none;
            display: block;
            padding: 10px;
            color: white;
            font-size: 18px;
            white-space: nowrap; /* Prevent text from wrapping */
        }

            .sidebar a:hover {
                background-color: #ddd;
            }

        /* Hamburger button */
        .sidebar-toggle-button {
            display: inline-block;
            cursor: pointer;
            z-index: 1000;
            position: fixed;
            top: 10px;
            left: 10px;
            background: none;
            border: none;
            padding: 10px;
        }

            /* Hamburger button bars */
            .sidebar-toggle-button div {
                width: 24px; /* Adjust the width slightly to ensure equal "X" */
                height: 4px;
                background-color: black;
                margin: 6px 0;
                transition: 0.4s;
            }

        /* Change the hamburger to an "X" when sidebar is active */
        .change .bar1 {
            transform: rotate(-45deg) translate(-6px, 8px);
        }

        .change .bar2 {
            opacity: 0;
        }

        .change .bar3 {
            transform: rotate(45deg) translate(-5px, -8px);
        }
    </style>
</head>
<body>
    <!-- Toggle Button -->
    <button class="sidebar-toggle-button" onclick="toggleSidebar()">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="mySidebar">
        <h3 class="w3-bar-item">&nbsp;&nbsp;&nbsp;</h3>

        <a href="/Index" class="w3-bar-item w3-button">
            HOME <i class="fa fa-home w3-margin-left"></i>
        </a>
        <a href="/Dashboard" class="w3-bar-item w3-button">
            Dashboard <i class="fa fa-dashboard w3-margin-left"></i>
        </a>
        <a href="/TaskManagement" class="w3-bar-item w3-button">
            Task Management <i class="fa fa-tasks w3-margin-left"></i>
        </a>
        <a href="/ProjectManagement" class="w3-bar-item w3-button">
            Project Management <i class="fa fa-folder w3-margin-left"></i>
        </a>
        <a href="/Client" class="w3-bar-item w3-button">
            Client <i class="fa fa-user-circle-o w3-margin-left"></i>
        </a>
        <a href="/Profile" class="w3-bar-item w3-button">
            Profile <i class="fa fa-user-circle w3-margin-left"></i>
        </a>
    </div>

    <!-- Page Content -->
    <div class="content">
        @RenderBody() <!-- This is where the content of each Razor page will be rendered -->
    </div>

    <!-- Optional Footer -->
    <footer class="text-center mt-4">
        <p>&copy; 2024 ASSIGMENTS. All rights reserved.</p>
    </footer>

    <!-- JavaScript Files -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to toggle the sidebar and change hamburger icon
        function toggleSidebar() {
            var sidebar = document.getElementById("mySidebar");
            var toggleButton = document.querySelector('.sidebar-toggle-button');
            sidebar.classList.toggle("hidden");
            toggleButton.classList.toggle("change");
        }
    </script>
</body>
</html>
